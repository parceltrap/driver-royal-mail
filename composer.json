{
    "name": "parceltrap/driver-royal-mail",
    "type": "library",
    "description": "A Royal Mail driver for ParcelTrap",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "graham-campbell/guzzle-factory": "^5.0",
        "parceltrap/parceltrap": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^1.21.1",
        "phpstan/phpstan": "^1.4.5",
        "symfony/var-dumper": "^5.4.3"
    },
    "autoload": {
        "psr-4": {
            "ParcelTrap\\RoyalMail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ParcelTrap\\RoyalMail\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:types": "phpstan analyse --ansi --memory-limit=-1",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
